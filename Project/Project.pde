void keyPressed() { 
  
  //WAVE---------------------------------------------------------------------------
  if (keyPressed) {
    if (key == 'W' || key == 'w') {
      waveInput(true);
    }
    if (key == 'S' || key == 's') {
      waveInput(false);        
    }
  } 
  //-------------------------------------------------------------------------------
  
  //LINE---------------------------------------------------------------------------
  if(key == 'L' || key == 'l'){
      addLine();
    }
  //--------------------------------------------------------------------------------
}